@page
@model RegisterModel

<div class="card shadow border-0 mt-auto  rounded-top-4 ">
    <div class="card-header  bg-primary py-4 rounded-top-4">
        <div class="row bg-primary rounded-top-4">
            <div class="col-12 bg-primary text-center rounded-top-4">
                @if (User.IsInRole(SD.RoleAdmin))
                {
                    <h1 class="py-2 text-white">Register BY ADMIN</h1>

                }
                else
                {

                    <h1 class="py-2 text-white">Register</h1>
                }
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row pt-3">
            <div class="col-12">
                <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="row">
                    @if (User.IsInRole(SD.RoleAdmin))
                    {
                        <h3 class="border-bottom pb-3 mb-4 text-secondary text-center">Create a new User.</h3>

                    }
                    else
                    {

                        <h3 class="border-bottom pb-3 mb-4 text-secondary text-center">Create a new account.</h3>
                        
                    }
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                    <div class="form-floating mb-3 col-6">
                        <input asp-for="Input.UserName" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                        <label asp-for="Input.UserName" class="ms-2 text-muted">User Name</label>
                        <span asp-validation-for="Input.UserName" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3 col-6">
                        <input asp-for="Input.phone" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                        <label asp-for="Input.phone" class="ms-2 text-muted">Phone Number</label>
                        <span asp-validation-for="Input.phone" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-3 col-12">
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                        <label asp-for="Input.Email" class="ms-2 text-muted">Email</label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3 col-6">
                        <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                        <label asp-for="Input.Password" class="ms-2 text-muted">Password</label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3 col-6">
                        <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                        <label asp-for="Input.ConfirmPassword" class="ms-2 text-muted">Confirm Password</label>
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3 col-6">
                        <input asp-for="Input.City" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                        <label asp-for="Input.City" class="ms-2 text-muted">City</label>
                        <span asp-validation-for="Input.City" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3 col-6">
                        <input asp-for="Input.StreetAddress" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                        <label asp-for="Input.StreetAddress" class="ms-2 text-muted">StreetAddress</label>
                        <span asp-validation-for="Input.StreetAddress" class="text-danger"></span>
                    </div>
                    @if (User.IsInRole(SD.RoleAdmin))
                    {
                        <div class="form-floating mb-3 col-6">


                            <select asp-for="Input.Role" asp-items="@Model.Input.Roles" class="form-select  text-muted">
                            </select>
                        </div>
                        
                    }
                    
                    
                    <div class="col-12 ">
                    <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary rounded-4">Register</button>
                    </div>
                </form>
            </div>
            <div class="col-12">
                <section>
                    <p class="divider-text d-flex pt-3">or</p>
                    <h3>Use another service to register.</h3>
                   
                    
                       
                    
                       
                       
                      
                    
                </section>
            </div>
        </div>

    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
