@model List<ApplicationUser>
<a asp-area="Identity" asp-page="/Account/Register" class="btn btn-primary "> Create User</a>
<div class="table-responsive">

    <table class="table table-hover table-bordered table-striped">
        <thead>
            <tr>
                <th>
                    User Name
                </th>
                <th>
                    Email
                </th>
                <th>
                    Phone Number
                </th>
                <th>
                    Role
                </th>
                <th>

                </th>
            </tr>
        </thead>



        @foreach (var item in Model.OrderBy(x => x.name))
        {
            <tr>
                <td>
                    @item.UserName
                </td>


                <td>
                    @item.Email
                </td>


                <td>
                    @item.PhoneNumber
                </td>


                <td>
                    @item.role
                </td>

                <td>
                    @if(item.LockoutEnd > DateTime.Now)
                    {
                        <a asp-action="LockUnlock" asp-route-id="@item.Id" asp-controller="User" class="btn btn-success">UnLock</a>

                    }
                    else
                    {
                        <a asp-action="LockUnlock" asp-route-id="@item.Id" asp-controller="User" class="btn btn-danger btn-success">Lock</a>

                    }
                </td>

                <td>
                    <a asp-action="Remove" asp-route-id="@item.Id" asp-controller="User" class="btn btn-primary" onclick="return confirm('Are you sure for delete')">Remove</a>
                </td>
            </tr>
        }
    </table>
</div>

